<div class="col-md-6 col-md-offset-3">
	<%= form_for :messages, url: messages_path, html: { class: "well" } do |f| %>
		
		<div class="form-group">
			<%= f.text_area :body, placeholder: 'Type Your Message...', class: 'form-control', rows: 5 %>
		</div>
		
		<ul class="list-group form-group">
			<% @recipients.each do |user| %>
				<label for="user<%= user.id %>">
					<li class="list-group-item">
						<span><%= user.username %></span>
						<%= check_box_tag "messages[user_tokens][]", user.id, false, id: "user#{user.id}" %>
					</li>		
				</label>
			<% end %>
		</ul>
	
		<div id="form-group">
			<%= f.submit "Submit", class: "btn btn-primary" %>
		</div>
	<% end %>
	
</div>
